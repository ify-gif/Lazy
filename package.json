{
  "name": "lazy-electron",
  "version": "1.0.13",
  "description": "Strategic Consultant Second Brain",
  "author": "Ify Gold",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ify-gif/Lazy.git"
  },
  "build": {
    "appId": "com.ifygold.lazy",
    "productName": "LAZY",
    "copyright": "Copyright Â© 2026 Ify Gold",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "out/**/*",
      "public/**/*",
      "package.json"
    ],
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LAZY",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "installerIcon": "public/app_icon_new.ico",
      "installerHeaderIcon": "public/app_icon_new.ico",
      "uninstallDisplayName": "LAZY",
      "deleteAppDataOnUninstall": true,
      "uninstallerIcon": "public/app_icon_new.ico",
      "license": "LICENSE.txt"
    },
    "win": {
      "icon": "public/app_icon_new.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "public/app_icon.png",
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ify-gif",
        "repo": "Lazy"
      }
    ]
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "clean": "node scripts/clean.mjs",
    "verify:installer-config": "node scripts/verify-installer-config.mjs",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "typecheck": "tsc --noEmit && tsc -p tsconfig.server.json --noEmit",
    "test:e2e-core": "playwright test tests/core-flows.spec.ts --project=chromium --reporter=line",
    "test:ipc-contract": "node --test tests/ipc-contract.test.mjs",
    "electron-dev": "node scripts/dev-up.mjs",
    "electron-build": "next build && tsc --build tsconfig.server.json --force && electron-builder",
    "electron-smoke": "node scripts/smoke-packaged.mjs",
    "electron-build-verified": "npm run electron-build && npm run electron-smoke",
    "electron-build-fresh": "npm run clean && npm run verify:installer-config && npm run electron-build-verified",
    "release:verify": "npm run lint && npm run typecheck && npm run verify:installer-config && npm run test:ipc-contract && npm run test:e2e-core && npm run electron-build-verified",
    "release:verify:ci": "npm run lint && npm run typecheck && npm run build && npm run test:ipc-contract && npm run test:e2e-core"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.564.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.4"
  },
  "overrides": {
    "tar": "^7.5.7",
    "glob": "^9.0.0"
  }
}
