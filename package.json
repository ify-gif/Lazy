{
  "name": "lazy-electron",
  "version": "0.1.7",
  "description": "Strategic Consultant Second Brain",
  "author": "Ify Gold",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ify-gif/Lazy.git"
  },
  "build": {
    "appId": "com.ifygold.lazy",
    "productName": "LAZY",
    "copyright": "Copyright \u00a9 2026 Ify Gold",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "out/**/*",
      "public/**/*",
      "package.json"
    ],
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LAZY",
      "artifactName": "${productName} Setup ${version}.${ext}",
      "uninstallDisplayName": "LAZY",
      "deleteAppDataOnUninstall": true,
      "uninstallerIcon": "public/app_icon_new.ico"
    },
    "win": {
      "icon": "public/app_icon_new.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "public/app_icon.png",
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ify-gif",
        "repo": "Lazy"
      }
    ]
  },
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron-dev": "concurrently \"cross-env BROWSER=none next dev\" \"wait-on http://127.0.0.1:3000/ && tsc -p tsconfig.server.json && electron .\"",
    "electron-build": "next build && tsc -p tsconfig.server.json && electron-builder"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.564.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "sqlite3": "^5.1.7",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^9.0.4"
  }
}